{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "public",
    "jsx": "react-jsx",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "build"],
  "include": ["./src", "webpack.config.ts"]
}
